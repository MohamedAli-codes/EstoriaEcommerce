@model Product

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-8">
            <h3>@Model.Name</h3>
            <p><strong>Stock:</strong> @Model.Stock</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Brand:</strong> @Model.Brand</p>
            <p><strong>Category:</strong> @Model.Category</p>

            <p><strong>Description:</strong></p>
            <div style="max-height: 200px; overflow-y: scroll; border: 1px solid #ddd; padding: 8px; border-radius: 5px;">
                @Model.Description
            </div>

            <p class="mt-3"><strong>Created At:</strong> @Model.CreatedAt.ToString("f")</p>
        </div>
    </div>
</div>